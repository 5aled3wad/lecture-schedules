<%- include('../partials/header') -%> <%- include('../partials/navbar') -%>
<style>
  .container {
    margin-top: 55px;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="display-4">Add New Lecture </h1>
      <hr>
      <form action="/events/create" method="post">

        <div class="form-group" style="margin-top: 2%;">
          <label for="title">Lecture name</label>
          <input
            type="text"
            name="lectureName"
            id="title"
            class="form-control"
            required
          />
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="instractor">Instractor</label>
          <input
            type="text"
            name="instractor"
            id="instractor"
            class="form-control"
            required
          />
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="location">Location</label>
          <select
            id="location"
            name="location"
            style="padding-left: 235px; padding-right: 235px"
          >
            <option value="Class A">Class A</option>
            <option value="Class B">Class B</option>
            <option value="Class C">Class C</option>
            <option value="Class D">Class D</option>
            <option value="Class E">Class E</option>
            <option value="Class F">Class F</option>
          </select>
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="group">Group</label>
          <select
            id="group"
            name="group"
            style="padding-left: 235px; padding-right: 235px"
          >
            <option value="First">First</option>
            <option value="Second">Second</option>
            <option value="Third">Third</option>
            <option value="Fourth">Fourth</option>
          </select>
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="day">Day</label>
          <select
            id="day"
            name="day"
            style="padding-left: 220px; padding-right: 220px"
          >
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
          </select>
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="time">Period : </label>
          <select id="hour" name="timeH">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
          </select>
          <!-- <select id="minute" name="timeM">
            <option value="00">00</option>
            <option value="15">15</option>
            <option value="30">30</option>
          </select> -->
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <button onclick="" type="submit" class="btn btn-primary">
            Create
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') -%>
