<%- include('../partials/header') -%> <%- include('../partials/navbar') -%>
<style>
  .container {
    margin-top: 55px;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="display-4">Edite </h1>
      <hr>
      <form action="<%='/events/update/'+event.id %>" method="post">
        <div class="form-group" style="margin-top: 2%;">
          <label for="title">Lecture name</label>
          <input
            type="text"
            name="lectureName"
            id="title"
            value="<%= event.lectureName %>"
            class="form-control"
          />
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="instractor">Instractor</label>
          <input
            type="text"
            name="instractor"
            id="instractor"
            value="<%= event.instractor %>"
            class="form-control"
          />
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="location">Location</label>
          <input
            type="text"
            name="location"
            id="location"
            value="<%= event.location %>"
            class="form-control"
          />
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="group">Group</label>
          <select
            id="group"
            name="group"
            style="padding-left: 191px; padding-right: 191px"
          >
            <option value="<%= event.group %>"><%= event.group %></option>
            <option value="First">First</option>
            <option value="Second">Second</option>
            <option value="Third">Third</option>
            <option value="Fourth">Fourth</option>
          </select>
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="day">Day</label>
          <select
            id="day"
            name="day"
            style="padding-left: 176px; padding-right: 176px"
          >
            <option value="<%= event.day %>"><%= event.day %></option>
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
          </select>
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <label for="time">Time : </label>
          <select id="hour" name="timeH">
            <option value="<%= event.timeH %>"><%= event.timeH %></option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
            <option value="11">11</option>
            <option value="12">12</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
          </select>
          <select id="minute" name="timeM">
            <option value="<%= event.timeM %>"><%= event.timeM %></option>
            <option value="00">00</option>
            <option value="15">15</option>
            <option value="30">30</option>
            <option value="45">45</option>
          </select>
        </div>

        <div class="form-group" style="margin-top: 2%;">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') -%>
